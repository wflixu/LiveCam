{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "LiveCam",
  "version": "2.0.0",
  "identifier": "cn.wflixu.icamera",
  "build": {
    "beforeBuildCommand": "pnpm run build",
    "beforeDevCommand": "pnpm run dev",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "category": "Utility",
    "copyright": "",
    "licenseFile": "",
    "externalBin": [],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "longDescription": "",
    "linux": {
      "deb": {
        "files": {}
      }
    },
    "macOS": {
      "entitlements": "./Entitlements.plist",
      "exceptionDomain": "",
      "minimumSystemVersion": "14.0",
   
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null,
      "dmg": {
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        },
        "windowSize": {
          "height": 400,
          "width": 660
        }
      }
    },
    "resources": [],
    "shortDescription": "",
    "targets": [
      "dmg",
      "app"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/wflixu/icamera/releases/download/v1.0.1/latest.json"
      ]
    }
  },
  "app": {
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 200,
        "width": 200,
        "alwaysOnTop": true,
        "resizable": false,
        "transparent": true,
        "hiddenTitle": true,
        "decorations": false,
        "titleBarStyle": "Transparent"
      }
    ]
  }
}