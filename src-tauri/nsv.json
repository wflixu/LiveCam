    },
    "windows": [
      {
        "fullscreen": false,
        "height": 200,
        "width": 200,
        "alwaysOnTop": true,
        "resizable": false,
        "transparent": true,
        "hiddenTitle": true,
        "decorations": false,
        "titleBarStyle": "Transparent"
      }
    ]
  }
}