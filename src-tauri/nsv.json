{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "LiveCam",
  "version": "1.1.0",
  "identifier": "cn.wflixu.icamera",
  "build": {
    "beforeBuildCommand": "pnpm run build",
    "beforeDevCommand": "pnpm run dev",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
   
  "bundle": {
    "active": true,
    "category": "Utilities",
    "copyright": "",
    "deb": {
      "depends": []
    },
    "externalBin": [],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "longDescription": "",
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "resources": [],
    "shortDescription": "",
    "targets": [
      "dmg",
      "app"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "app": {
    "macOSPrivateApi": true,
    "allowlist": {
      "all": true
    },
    "systemTray": {
      "iconPath": "icons/tray-icon.png",
      "iconAsTemplate": true
    },
  
    "security": {
      "csp": null
    },
    "updater": {
      "active": false,
      "endpoints": [
        "https://github.com/wflixu/icamera/releases/download/v1.0.1/latest.json"
